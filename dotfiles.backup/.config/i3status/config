general {
        colors = true
        interval = 1
        color_good = "#21B089"
        color_bad = "#F9555F"
        color_degraded = "#FFFF55"
        output_format = i3bar
}

# order += "ipv6"
order += "volume master"
order += "cpu_usage"
order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up =  " W: %essid / %ip "
        format_down = " No WIFI "
}

cpu_usage {
        format = " cpu %usage "
}

load {
        format = " load %1min "
        max_threshold = 0.3
}

disk "/" {
        # format = " hdd %avail "
        format = " â› %avail "
}
disk "/home" {
        # format = " hdd %avail "
        format = " â› %avail "
}


ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " E: %ip "
        format_down = " No lan "
}

battery all {
        format = " %status %percentage "
        # format = " %status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "âš¡"
        status_bat = "ğŸ”‹"
        status_unk = "?"
        status_full = "â˜»"

        #status_chr = "ï‡¦"
        # status_chr = "âš¡"
        # status_bat = "bat"
        # status_bat = "â˜‰"
        # status_bat = "ïˆ“"
        # status_unk = "?"
        # status_unk = ""
        low_threshold = 15
        threshold_type = time
}

memory {
        #format = "%used | %available"
        format = " %used "
	threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        #format = " %d.%m. %H:%M "
	format = " %a, %B %e | %I:%M %p"
}

## audio volume sensor
